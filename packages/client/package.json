{
	"name": "@lens/client",
	"version": "0.1.0",
	"description": "Reactive client for Lens API framework",
	"type": "module",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		}
	},
	"scripts": {
		"build": "bun build ./src/index.ts --outdir ./dist --target node && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir ./dist",
		"typecheck": "tsc --noEmit",
		"test": "bun test"
	},
	"files": [
		"dist",
		"src"
	],
	"keywords": [
		"lens",
		"client",
		"reactive",
		"signals"
	],
	"author": "SylphxAI",
	"license": "MIT",
	"dependencies": {
		"@lens/core": "workspace:*",
		"@msgpack/msgpack": "^3.1.2",
		"@preact/signals-core": "^1.8.0"
	},
	"devDependencies": {
		"@lens/server": "workspace:*",
		"typescript": "^5.9.3",
		"zod": "^4.1.13"
	}
}
