{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"cache": false
		},
		"test": {
			"dependsOn": ["build"]
		},
		"typecheck": {
			"dependsOn": ["^build"]
		},
		"//#lint": {
			"cache": false
		}
	}
}
